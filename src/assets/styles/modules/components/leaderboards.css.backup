/* Leaderboards Component Styles */

.lb-cont {
  background: linear-gradient(
    135deg,
    rgba(230, 126, 34, 0.08) 0%,
    rgba(26, 26, 26, 0.98) 25%,
    rgba(26, 26, 26, 0.98) 75%,
    rgba(232, 220, 196, 0.08) 100%
  );
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.12);
  overflow: hidden;
  transition: var(--tr);
  position: relative;
  box-shadow:
    0 0 8px rgba(230, 126, 34, 0.05),
    0 0 16px rgba(232, 220, 196, 0.03),
    0 8px 32px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.1),
    inset 0 -1px 0 rgba(255, 255, 255, 0.02);
  -webkit-backdrop-filter: blur(12px);
  backdrop-filter: blur(12px);
}

.lb-cont::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(230, 126, 34, 0.4) 25%,
    rgba(255, 255, 255, 0.6) 50%,
    rgba(232, 220, 196, 0.4) 75%,
    transparent 100%
  );
  z-index: 4;
  pointer-events: none;
}

@media (hover: hover) {
  .lb-cont:hover {
    border-color: rgba(255, 255, 255, 0.18);
    box-shadow:
      0 0 12px rgba(230, 126, 34, 0.08),
      0 0 24px rgba(232, 220, 196, 0.05),
      0 12px 40px rgba(0, 0, 0, 0.4),
      inset 0 1px 0 rgba(255, 255, 255, 0.15),
      inset 0 -1px 0 rgba(255, 255, 255, 0.03);
  }
}

.lb-hdr {
  padding: 20px;
  background: var(--grad-dark);
  border-bottom: 1px solid rgba(255, 255, 255, 0.12);
  position: relative;
  -webkit-backdrop-filter: blur(8px);
  backdrop-filter: blur(8px);
}

.lb-hdr::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.15) 25%,
    rgba(255, 255, 255, 0.25) 50%,
    rgba(255, 255, 255, 0.15) 75%,
    transparent 100%
  );
  z-index: 2;
  pointer-events: none;
}

.lb-hdr::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    var(--mg) 30%,
    var(--sw) 70%,
    transparent 100%
  );
  opacity: 0.7;
  animation: scoreShine 8s linear infinite;
  z-index: 1;
  pointer-events: none;
}

.tabs {
  display: flex;
  background: var(--s2);
  border-bottom: 1px solid var(--bd);
  position: relative;
}

.tab-btn {
  flex: 1;
  padding: 12px;
  background: transparent;
  border: none;
  color: var(--t2);
  cursor: pointer;
  font-weight: 500;
  font-size: 0.9rem;
  transition: var(--tr);
  position: relative;
  -webkit-tap-highlight-color: transparent;
}

@media (hover: none) and (pointer: coarse) {
  .tab-btn:focus {
    outline: none;
  }
}

.tab-btn:active {
  transform: scale(0.97);
  background: rgba(230, 126, 34, 0.15);
}

@media (hover: hover) {
  .tab-btn:hover {
    background: linear-gradient(135deg, rgba(230, 126, 34, 0.15) 0%, rgba(232, 220, 196, 0.15) 100%);
    color: var(--t);
    box-shadow: inset 0 -2px 0 rgba(230, 126, 34, 0.6);
    font-weight: 550;
  }
}

.tab-btn.active {
  background: linear-gradient(135deg, rgba(230, 126, 34, 0.08) 0%, rgba(232, 220, 196, 0.08) 100%);
  color: var(--t);
  font-weight: 600;
  text-shadow: 0 0 10px rgba(230, 126, 34, 0.2);
}

.tab-btn.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: var(--grad-main);
  box-shadow:
    0 0 10px rgba(230, 126, 34, 0.3),
    0 0 15px rgba(232, 220, 196, 0.2);
  pointer-events: none;
}

.tab-cont {
  display: none;
}

.tab-cont.active {
  display: block;
}

.lb-table {
  width: 100%;
  border-collapse: collapse;
}

.lb-table th {
  background: var(--grad-dark);
  color: var(--t2);
  padding: 12px;
  text-align: left;
  font-weight: 500;
  font-size: 0.85rem;
  text-transform: uppercase;
  border-bottom: 2px solid rgba(255, 255, 255, 0.1);
}

.lb-table td {
  padding: 12px;
  color: var(--t);
  border-bottom: 1px solid var(--bd);
  transition: all 0.2s;
}

.lb-table tbody tr:nth-child(even) {
  background: rgba(45, 45, 45, 0.3);
}

.lb-table tbody tr:nth-child(odd) {
  background: rgba(15, 15, 15, 0.2);
}

@media (hover: hover) {
  .lb-table tbody tr:hover {
    background: rgba(230, 126, 34, 0.15) !important;
  }
}

.rank-1 .rank-cell {
  color: #ffd700;
  text-shadow:
    0 0 8px rgba(255, 215, 0, 0.5),
    0 0 15px rgba(255, 215, 0, 0.3);
  font-weight: 700;
  animation: rankPulse 3s ease-in-out infinite;
}

.rank-2 .rank-cell {
  color: #c0c0c0;
  text-shadow:
    0 0 8px rgba(192, 192, 192, 0.5),
    0 0 15px rgba(192, 192, 192, 0.3);
  font-weight: 700;
  animation: rankPulse 3.5s ease-in-out infinite;
}

.rank-3 .rank-cell {
  color: #cd7f32;
  text-shadow:
    0 0 8px rgba(205, 127, 50, 0.5),
    0 0 15px rgba(205, 127, 50, 0.3);
  font-weight: 700;
  animation: rankPulse 4s ease-in-out infinite;
}

.rank-1 td:last-child,
.rank-2 td:last-child,
.rank-3 td:last-child {
  font-weight: 600;
  background: var(--grad-main);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  filter: drop-shadow(0 0 8px rgba(230, 126, 34, 0.2));
}
